{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"@": ["src"],
			"@styles": ["styles"],
			"@assets": ["assets"],
			"@components": ["components"],
			"@utils": ["utils"],
			"@services": ["services"],
			"@views": ["views"],
			"@store": ["store"]
		}
	},
	"include": ["./src"]
}
